{
  "name": "traffaret/amphp-async-soap",
  "type": "library",
  "description": "Async soap requests with amphp",
  "license": "MIT",
  "authors": [
    {
      "name": "Oleg Tikhonov",
      "email": "to@toro.one"
    }
  ],
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "platform": {
      "php": "8.0",
      "ext-soap": "1"
    }
  },
  "autoload": {
    "psr-4": {
      "Traff\\Soap\\": "src/"
    },
    "files": [
      "src/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Traff\\Soap\\Test\\": "tests",
      "Traff\\Soap\\Test\\Unit\\": "tests/unit",
      "Traff\\Soap\\Test\\Functional\\": "tests/functional"
    }
  },
  "require": {
    "php": "^8.0",
    "ext-soap": "*",
    "amphp/http-client": "^4.3"
  },
  "require-dev": {
    "amphp/phpunit-util": "^1.4",
    "mockery/mockery": "^1.4",
    "phpunit/phpunit": "^9.4",
    "squizlabs/php_codesniffer": "^3.5"
  },
  "scripts": {
    "check": [
      "@code-style",
      "@test"
    ],
    "test": "phpunit",
    "test:with-coverage": "phpunit --testsuite unit --coverage-clover clover.xml",
    "code-style": "./vendor/bin/phpcs",
    "code-style:fix": "./vendor/bin/phpcbf"
  }
}
